import java.util.*;
public class Practice {
/*Q2. Sum of first n natural numbers */
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("enter the value of n ");
        int sum = 0 ;
        int n = sc.nextInt();
        for(int i = 0 ; i <= n ; i++){
            sum += i ;
        }
        System.out.println(sum);

    }
}
